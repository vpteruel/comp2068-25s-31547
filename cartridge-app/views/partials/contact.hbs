<section class="contact fade-up" id="contact">
    <div class="contact-container">
        <div class="section-header">
            <h2 class="section-title">Initialize Contact</h2>
            <p class="section-subtitle">Send a transmission through the neural network</p>
        </div>
        
        <div class="contact-form-wrapper">
            <div class="contact-form">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Enter your name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="name@example.com" required>
                </div>
                
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="5" placeholder="Compose your message..." required></textarea>
                </div>

                <button type="submit" class="btn-primary btn-submit">Send Message</button>
            </div>
        </div>
    </div>
</section>