                <li class="list-group-item">Computer Programming student</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <%- include('partials/footer') %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
  </body>
</html>